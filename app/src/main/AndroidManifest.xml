<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thai.vincent.sgvfirestation">

    <application
        android:allowBackup="true"
        android:icon="@drawable/large_fire_station"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name="com.thai.vincent.sgvfirestation.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.thai.vincent.sgvfirestation.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Menu"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="com.thai.vincent.sgvfirestation.MainActivity"/>

        <activity android:name="com.thai.vincent.sgvfirestation.ItemDetailScrollingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="SomeBudName"
            android:parentActivityName="com.thai.vincent.sgvfirestation.MenuActivity"/>

        <activity android:name="com.thai.vincent.sgvfirestation.NewItemActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="New Item"
            android:parentActivityName="com.thai.vincent.sgvfirestation.MenuActivity"/>

        <activity android:name="com.thai.vincent.sgvfirestation.DealsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Deals"
            android:parentActivityName="com.thai.vincent.sgvfirestation.MainActivity"/>



    </application>

</manifest>